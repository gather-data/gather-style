{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "jsx": "react",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src"]
}
